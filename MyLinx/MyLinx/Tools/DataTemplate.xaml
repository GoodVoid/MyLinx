<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:MyLinx.ViewModel"
                    xmlns:view="clr-namespace:MyLinx.View"
                    >

    <DataTemplate DataType="{x:Type vm:MacrosVM}">
        <view:Macros />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ScriptsVM}">
        <view:Scripts />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SettingsVM}">
        <view:Settings />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ErrorWindowVM}">
        <view:ErrorMessageWindow/>
    </DataTemplate>

</ResourceDictionary>